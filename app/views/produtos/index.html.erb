<!DOCTYPE html>
<html>
<body>
    <table class='table table-bordered'>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Quantidade</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            <% @produtos_nome.each do |produto| %>
            <tr>
                <td><%= produto.nome %></td>
                <td><%= produto.descricao %></td>
                <td><%= produto.preco %></td>
                <td><%= produto.quantidade %></td>
                <td>
                    <%= link_to "Alterar", edit_produto_path(produto),
                                            class: "btn btn-default"%>
                </td>
                <td>
                    <%= button_to "Remover", produto, method: :delete, 
                                            class: "btn btn-danger",
                                            data: {confirm: "Tem certeza que deseja excluir #{produto.nome}?"}%>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <%= link_to "Criar novo produto", new_produto_path %>
    
    
    
    
    
</body>
</html>